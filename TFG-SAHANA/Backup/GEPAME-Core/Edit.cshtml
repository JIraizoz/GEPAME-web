@model GEPAME.Models.Vehiculo

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Vehiculo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Vin" class="control-label"></label>
                <input asp-for="Vin" class="form-control" />
                <span asp-validation-for="Vin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Matricula" class="control-label"></label>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anyo" class="control-label"></label>
                <input asp-for="Anyo" class="form-control" />
                <span asp-validation-for="Anyo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Desplegado" /> @Html.DisplayNameFor(model => model.Desplegado)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="EnServicio" /> @Html.DisplayNameFor(model => model.EnServicio)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="TipoVehiculo" class="control-label"></label>
                <select asp-for="TipoVehiculo" class="form-control" asp-items="ViewBag.TipoVehiculo"></select>
                <span asp-validation-for="TipoVehiculo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
